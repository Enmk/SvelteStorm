{
  "name": "svelte-storm",
  "version": "2.0.0",
  "description": "A Svelte IDE like no other. Embrace the storm.",
  "main": "src/index.js",
  "module": "src/index.js",
  "exports": {
    ".": {
      "import": "./src/index.js"
    }
  },
  "scripts": {
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=false --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"APP NAME\"",
    "package-linux": "electron-packager .  svelte-storm --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/linux/logo.png --prune=true --out=release-builds",
    "create-debian-installer": "electron-installer-debian --src release-builds/svelte-storm-linux-x64/ --arch amd64 --config debian.json",
    "start": "concurrently \"npm:svelte-dev\" \"electron-forge start\"",
    "package": "electron-forge package",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "svelte-build": "rollup -c",
    "svelte-dev": "rollup -c -w",
    "svelte-start": "sirv public",
    "test": "mocha test/main.js --timeout 10000",
    "type": "module",
    "rebuild node-pty": "electron-rebuild -f -w node-pty"
  },
  "config": {
    "forge": {
      "electronRebuildConfig": {
        "forceABI": 101
      },
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "crawler"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "@babel/core": "^7.17.0",
    "@electron/remote": "^2.0.4",
    "@rollup/plugin-commonjs": "^21.0.1",
    "codemirror": "^5.65.1",
    "electron-rebuild": "^3.2.7",
    "electron-reload": "^1.5.0",
    "electron-squirrel-startup": "^1.0.0",
    "estree-walker": "^3.0.1",
    "monaco-editor": "^0.32.1",
    "monaco-languageclient": "^0.13.0",
    "node-abi": "^3.8.0",
    "node-pty": "^0.10.1",
    "npm-check-updates": "^12.2.1",
    "svelte-watch-resize": "^1.0.3",
    "vscode-json-languageservice": "^4.2.0",
    "xterm": "^4.18.0",
    "xterm-addon-fit": "^0.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@tsconfig/svelte": "^3.0.0",
    "autoprefixer": "^10.4.2",
    "babel": "^6.23.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chokidar": "^3.5.3",
    "concurrently": "^7.1.0",
    "electron": "^17.0.0",
    "electron-packager": "^15.4.0",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.15.0",
    "mocha": "^9.2.0",
    "rollup": "^2.67.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-import-css": "^3.0.2",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "spectron": "^19.0.0",
    "svelte": "^3.46.4"
  }
}
